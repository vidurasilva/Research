{% extends "AdminBundle:Login:layout.html.twig" %}


{% block fos_user_content %}
    {% if error %}
        <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
    {% endif %}

    <!-- Add class "fade-in-effect" for login form effect -->
    <form action="{{ path("fos_user_security_check") }}" method="post" role="form" id="login"
          class="login-form fade-in-effect">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

        <div class="login-header">
            <p>Dear user, log in to access the admin area!</p>
        </div>

        <div class="form-group">
            <label class="control-label"
                   for="username">Username</label>
            <input type="text" class="form-control input-dark" name="_username" id="username" autocomplete="off"
                   value="{{ last_username }}" required="required"/>
        </div>

        <div class="form-group">
            <label class="control-label" for="passwd">Password</label>
            <input type="password" class="form-control input-dark" id="passwd" autocomplete="off" name="_password"
                   required="required"/>

        </div>
        <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
        <label for="remember_me">Remember me</label>

        <div class="form-group">
            <button type="submit" id="_submit" class="btn btn-dark  btn-block text-left" name="_submit"
                    value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}">
                <i class="fa-lock"></i>
                Log In
            </button>
        </div>

    </form>
{% endblock fos_user_content %}

